<div class="new-rival-box">
  <%= form_tag('/rivals', method: :post) do %>
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label class="control-label ">入力フォーム</label>
        <textarea class="form-control" placeholder ="志望大 : (例 東京大学理科一類)" name="school" rows="1" required></textarea><br>
        <textarea class="form-control" placeholder ="会いたいライバル像 : (例 同じ志望校を目指す、ライバルを募集！)" name="text" rows="10" required></textarea><br>
      </div>
      <input type="submit" class="btn btn-prymary" value="SENT">
    </form>
  <% end %>
</div>